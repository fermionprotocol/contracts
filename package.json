    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-preprocessor": "^0.1.5",
    "opensea-js": "^7.1.22",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.0.0",
